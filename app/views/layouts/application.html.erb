<!DOCTYPE html>
<html>
  <head>
    <title>Zik's Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- <nav class = "navbar navbar-expand-lg navbar-dark bg-primary">
        <%= link_to 'My Blog', root_path, class: 'navbar-brand'%>
        <div class="container">
          <p class="navbar-text navbar-right">
            <% if user_signed_in? %>
                <%= link_to 'New Post', new_post_path, class:'navbar-link' %>
            <% else %>
                <%= link_to 'Admin Login', new_user_session_path, class: 'navbar-link' %>
            <% end %>
          </p>
        </div>
    </nav> -->



    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="<%= root_path %>">My Blog</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <!-- use nav-item active to make it green-->
          <li class="nav-item">
            <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= resume_index_path  %>">resume</a>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <!-- remember the rails g scaffold post title:string body:text -->
              <!-- the new_post and new_user_session can be checked using rake routes-->
              <a class="nav-link" href="<%= new_post_path %>">Message Board</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_user_session_path %>">Login</a>
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>



    <div class = "col-md-10 col-md-offset-1">
        <%= yield %>
    </div>
  </body>
</html>
